{
  "name": "Tabsist App",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Tab manager",
  "background":
  {
    "service_worker":"./bg.js"
   

  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./main.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "./popup/popup.html"
  },
  "options_page": "./options/options.html",
  "permissions": ["storage","tabs","activeTab","contextMenus","tabGroups"],
  "host_permissions":["<all_urls>"]

}